<!DOCTYPE html>
<html>
  <head>
    <title>Wasteless</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

  </head>

    <body>
      <div class="content-wrapper <%=params[:controller] %>-<%= params[:action] %>">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="dropdown" id="avatar-home">
                <%= link_to "javascript:history.back()" do %>
                  <i class="fas fa-arrow-left blue-icon"></i>
                <% end %>
                <% if user_signed_in? %>
                    <%= cl_image_tag current_user.photo.key, width: 60, height: 60, crop: :fill, class:"avatar dropdown-toggle", :id => "navbarDropdown", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false"} if current_user.photo.attached? %>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                      <%= link_to "DÃ©connexion", destroy_user_session_path, class:"dropdown-item"%>
                    </div>
                <% else %>
                  <%= cl_image_tag "ksklzyapqn0zcabbqsmm", width: 60, height: 60, crop: :fill, class:"avatar dropdown-toggle", :id => "navbarDropdown", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false"} %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to "Connexion", new_user_session_path, class:"dropdown-item"%>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <%= yield %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
      <%= render 'layouts/navbar' %>
  </body>
</html>
