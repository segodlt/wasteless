<div class="home">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1552033931-d249575b5ac1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);" >
    <h1><strong>Bienvenue sur Wasteless</strong></h1>
    <p>Recherchez et partagez vos recettes de produits ménagers et bien-être faits maison !</p>

    <div class="form-inline">
      <%= form_tag root_path, style: "width: 90%", method: :get do %>
        <div class="research">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Trouvez votre recette !"
          %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<ul class="filter" style="list-style-type: none;">
  <% @categories.each do |category| %>
    <li><%= link_to category.name, root_path(category_id:category.id), class: "btn-flat #{"active" if params[:category_id] == category.id.to_s}" %></li>
  <% end %>
</ul>

<div class="results">
  <% if params[:query].present? %>
    <%= "#{@recipes.count} résultat(s)" %>
  <% else %>
    <p>Nos dernières recettes</p>
  <% end %>
</div>

<div class="container">
  <div id="recipes">
    <div class="list-container">
      <% @recipes.each do |recipe| %>
        <div class = "recipe-card">
          <div class = "top">
            <div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= cl_image_path(recipe.photos.first.key, crop: :fill) if recipe.photos.attached? %>")'>
              <div class = "favorites">
                <div id="favorite-icon">
                  <% if current_user %>
                     <% if recipe.favorites.any? %>
                       <%= link_to favorite_path(recipe.favorites.first), method: :delete do %>
                        <i class="fas fa-heart icon"></i>
                       <% end %>
                    <% else %>
                      <%= link_to favorites_path(recipe: recipe), method: :post do %>
                        <i class="far fa-heart icon"></i>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
                <div class="card-rating">
                  <% if recipe.average_rating > 0 %>
                    <p class = "rating"><%= "★" * recipe.average_rating %><%= "☆" * (5 - recipe.average_rating) %> <%= " (#{recipe.reviews.count} avis)" %></p>
                  <% else %>
                    <%= "" %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class = "bot">
              <%= link_to recipe_path(recipe) do %>
                <h2><%= recipe.title %></h2>
               <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
